<Page xmlns="http://www.nativescript.org/tns.xsd" cssClass="page" loaded="pageLoaded">
  <StackLayout>
    
    
    <Label text="Search" cssClass="title"/>
    <SearchBar text="{{searchText}}" cssClass="search" submit="{{onSearch}}" clear="{{clearSearch}}" />
    
    <Label text="{{searchText}}" cssClass="message"/>    
    
    <Label text="{{output}}" cssClass="message"/>
    <Button text="Move!" tap="{{ moveAction }}" />
    
    <ListView items="{{items}}" itemTap="{{listViewItemTap}}">
            <ListView.itemTemplate>
                    <Label text="{{name}}" />
            </ListView.itemTemplate>
    </ListView>
    
    <!--<Label text="Tap the button" cssClass="message"/>
    
    <Label text="{{ message }}" cssClass="message" textWrap="true"/>-->
  </StackLayout>
</Page>